@model IEnumerable<LmycWebSite.Models.ApplicationUser>

@{
    ViewBag.Title = "Add User";
    Microsoft.AspNet.Identity.EntityFramework.IdentityRole r = ViewBag.Role;
}

<h2>Add User</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.Count)
            </td>
            <td>
                @Html.ActionLink("Add", "AddUser", new { id = item.Id, role = r.Name })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
